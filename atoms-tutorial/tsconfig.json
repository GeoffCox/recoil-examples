{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist/", 
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6"
    },
    "include": [
      "./src/**/*"
  ]
}